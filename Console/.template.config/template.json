{
    "$schema": "http://json.schemastore.org/template",
    "identity": "RhoMicro.Templates.Console",
    "author": "Paul Brätz",
    "classifications": [
        "Console",
        "C#"
    ],
    "name": "RhoMicro Console",
    "groupIdentity": "RhoMicro.Templates.Console",
    "shortName": "rhocon",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "$(ProjectName)",
    "preferNameDirectory": true,
    "symbols": {
        "Author": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "$(Author)",
            "defaultValue": "Paul Brätz"
        },
        "Description": {
            "type": "parameter",
            "isRequired": true,
            "datatype": "text",
            "replaces": "$(Description)"
        },
        "Tags": {
            "type": "parameter",
            "isRequired": true,
            "datatype": "text",
            "replaces": "$(Tags)",
            "defaultValue": "Source Generator"
        },
        "Year":{
            "type": "parameter",
            "isRequired":true,
            "datatype":"text",
            "replaces": "$(Year)"
        },
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "enableQuotelessLiterals": true,
            "choices": [
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8"
                },
                {
                    "choice": "net7.0",
                    "description": "Target .NET 7"
                },
                {
                    "choice": "net6.0",
                    "description": "Target .NET 6"
                },
                {
                    "choice": "netstandard2.1",
                    "description": "Target .NET Standard 2.1"
                },
                {
                    "choice": "netstandard2.0",
                    "description": "Target .NET Standard 2.0"
                }
            ],
            "replaces": "$(TargetFrameworkMoniker)",
            "defaultValue": "net7.0"
        }
    }
}